@{ 
    var topContent = (List<Model.Entity.Content>)ViewBag.TopContents;
}
<section class="from-blog spad mb-3">
    <div class="container">
        <div class="d-flex w-100 justify-content-between align-items-center my-1">
            <div class="h5 text-light font-weight-bold">
                <i class="fa fa-comment bg-gradient-warning p-2 rounded-circle"></i> Bài viết tiêu biểu
            </div>
            <div>
                <a class="text-light shadow-light bg-gradient-success p-2 rounded-e-20"> Xem tất cả</a>
            </div>

        </div>
        <div class="row">
            @{
                foreach (var content in topContent)
                {
                    var count = new Model.DAO.ContentDAO().GetCommentCountByContentId(content.Id);
                    <div class="col-lg-4 col-md-4 col-sm-6 mb-3">
                        <div class="blog__item ">
                            <div class="blog__item__pic">
                                <a href="/chi-tiet-@content.MetaTitle-@content.Id"><img src="@content.Image" class="img-fluid" alt=""></a>
                            </div>
                            <div class="blog__item__text">
                                <ul>
                                    <li><i class="fa fa-calendar-o"></i> @content.CreateAt.Value.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("vi-VN")) </li>
                                    <li><i class="fa fa-comment-o"></i> @count </li>
                                </ul>
                                <h5><a href="/chi-tiet-@content.MetaTitle-@content.Id">@content.Name</a></h5>
                                <p class="dot-ellipsis">
                                    @content.Description
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

