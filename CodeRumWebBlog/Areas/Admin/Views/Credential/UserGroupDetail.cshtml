@model IEnumerable<Model.Entity.Role>

@{
    ViewBag.Title = "UserGroupDetail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    var userGroup = (Model.Entity.UserGroup)ViewBag.UserGroup;
}
@section Navbar {
    @{
        ViewBag.IsHome = false;
        ViewBag.IsContent = false;
        ViewBag.IsUser = false;
        ViewBag.IsCategory = false;
    }
}
<h3>@userGroup.Name</h3>
<p>
    <a href="@Url.Action("AddNew", "Credential")">Thêm quyền</a>
</p>
@if (userGroup.Id == "ADMIN")
{
    <div class="mt-4 p-5 bg-primary text-white rounded">
        <h1>Quản trị viên có mọi quyền hạn</h1>
        <p>Lorem ipsum...</p>
    </div>
}
else
{
    <div class="row" id="simple-tabpanel-0">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> @userGroup.Name </h4>
                    <h6 class="card-subtitle my-2"><a href="@Url.Action("AddNew", "Credential")">Thêm quyền</a></h6>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <a href="#">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



<div class="container">
    <div class="row d-flex justify-content-center">
        @{
                var role = (List<Model.Entity.Role>)ViewBag.Role;
                foreach (var r in role)
                {
                <div class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-between align-items-center bg-white border p-2 m-2 rounded">
                    <a> @r.Name </a>
                    <a href="#">Thêm <i class="fas fa-plus"></i></a>
                </div>
            }
        }
    </div>
</div>

