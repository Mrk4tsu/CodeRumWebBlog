<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/PagedList.css" rel="stylesheet" />
    <link href="~/Assets/css/Site.css" rel="stylesheet" />
    <link href="~/Assets/css/code-rum-style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a href="/trang-chu-quan-tri-vien" class="navbar-brand">Trang chủ</a>
            @*@Html.ActionLink("Application name", "Index", "Home", new { area = "Admin" }, new { @class = "navbar-brand" })*@
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @if (TempData["AlertMessage"] != null)
        {
            <div id="AlertBox" class="alert alert-dismissible @TempData["AlertType"] hide">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                @TempData["AlertMessage"]
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="/Assets/jQuery/jquery-3.7.1.min.js"></script>
    <!--Ajax-->
    <script src="~/Assets/js/jquery.unobtrusive-ajax.js"></script>

    <script src="~/Assets/js/bootstrap.min.js"></script>
    <!--Ck-Finder-->
    <script src="~/Assets/plugin/ckfinder/ckfinder.js"></script>
    <!--Ck-Editor-->
    <script src="/Assets/plugin/ckeditor/ckeditor.js"></script>

    <script src="~/Assets/js/scripts.js"></script>

    <!--Thêm JavaScript cá nhân-->
    @RenderSection("jsFooter", required: false)
</body>
</html>
