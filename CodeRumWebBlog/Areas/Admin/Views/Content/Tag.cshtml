﻿@model IEnumerable<Model.Entity.Content>
@{
    ViewBag.Title = "Tag";

    var tag = (Model.Entity.Tag)ViewBag.Tag;
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>@tag.Name</h3>
        </div>
        <div class="see">

        </div>
        <div class="clear"></div>
    </div>
    @foreach (var item in Model)
    {
        <div class="image group">
            <div class="grid images_3_of_1">
                <img style="height:100%; width:350px;" src="@item.Image" alt="" />
            </div>
            <div class="grid news_desc">
                <h3><a href="/chi-tiet/@item.MetaTitle-@item.Id">@item.Name </a></h3>
                <h4>Posted on @item.CreateAt.Value.ToString("h:mm tt  d MMMM yyyy") by <span><a href="#">@item.CreateBy</a></span></h4>
                @item.Description
            </div>
        </div>
    }
    @if (ViewBag.TotalPage > 1)
    {
        var pageDisplay = (int)ViewBag.MaxPage;
        int totalPage = (int)ViewBag.TotalPage;
        int currentPage = ((int)ViewBag.Page);

        // Create numeric links
        var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
        var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

        var link = "/tag/" + tag.Id;

        <div class="d-flex justify-content-center">
            <div class="paginations">
                @if (currentPage > ViewBag.First)
                {
                    <a class="first-child" href="@link?page=@ViewBag.First">«</a>
                }
                <a hidden href="#"></a>
                @for (int i = startPageIndex; i <= endPageIndex; i++)
                {
                    if (currentPage == i)
                    {
                        <a class="active" href="@link?page=@i">@i</a>
                    }
                    else
                    {
                        <a href="@link?page=@i">@i</a>
                    }

                }
                <a hidden style="display:none" href="#"></a>
                @if (currentPage < totalPage)
                {
                    <a class="last-child" href="@link?page=@ViewBag.Last">»</a>
                }

            </div>
        </div>
    }


